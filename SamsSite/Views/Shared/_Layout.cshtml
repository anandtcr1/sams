<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SamsSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css?a=1" />

    <style>
        .c {
            background-color: #57328E;
            color: white;
            padding: 14px 25px;
            text-align: center;
            margin-left: 4px;
            margin-right: 4px;
            text-decoration: none;
            display: inline-block;
        }

        .c:hover, .c:active {
            background-color: #0B0B3B;
        }

        @@media
        (min-width: 768px) {
            .box

        {
            transition: box-shadow .3s;
            margin-left: 4px;
            border-radius: 4px;
            border: 1px solid #ccc;
            background: #fff;
            float: right;
        }

        .box:hover {
            box-shadow: 0 0 11px rgba(33,33,33,.2);
        }
        }
        


    </style>


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">



                <!--
    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SamsSite</a>
    -->
                <img src="~/images/logo_4.png" alt="Sams Holdings Logo" style="width:200px;" />

                

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse"  >
                    <ul class="navbar-nav flex-grow-1 pull-right" style="padding:right;" >
                        <li class="nav-item">

                            <!--
                            <button name="idHome" id="idHome" value="Home">Home</button>
                            -->
                            <div class="box">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Properties" asp-action="Index">HOME </a>
                            </div>
                            
                        </li>

                        <li class="nav-item">

                            <div class="box"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">ABOUT</a></div>
                                
                        </li>

                        <li class="nav-item">
                            <div class="box">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Properties" asp-action="SurplusProperties">SURPLUS REAL ESTATE</a>
                            </div>
                        </li>

                        <li class="nav-item">
                            <div class="box">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Properties" asp-action="NetLeaseProperties">NET LEASE PROPERTIES</a>
                            </div>
                        </li>

                        <li class="nav-item">
                            <div class="box">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Properties" asp-action="C_StoreList">C-STORES FOR SALE </a>
                            </div>
                        </li>

                        <li class="nav-item">
                            <div class="box">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Properties" asp-action="SubmitSite">SUBMIT A SITE </a>
                            </div>
                        </li>

                        <li class="nav-item">
                            <div class="box">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact_Us">CONTACT US </a>
                            </div>
                        </li>

                        <!--
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Properties" asp-action="Index">Properties</a>
            </li>
            -->

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - SamsSite - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
