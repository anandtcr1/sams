@model sams.Models.AssetTypeViewModel

@using sams.Common;
@{
    UserViewModel loggedInUser = Context.Session.GetObjectFromJson<UserViewModel>("LoggedInAdmin");
}

@{
    ViewData["Title"] = "AddAssetType";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<script>
    function saveData() {
        var txtAssetTypeName = $("#AssetTypeName").val();
        if (txtAssetTypeName == '') {
            canSave = false;
            $("#errAssetTypeName").html("<font color='red'>Please enter Asset Name</font>");
            $("#AssetTypeName").focus();
            return;
        }
        else {
            $("#errAssetTypeName").html("");
        }

        $("#SaveAssetType").submit();
    }
</script>

<div class="content-wrapper">

    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Asset type</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="Index">All List</a></li>
                        <li class="breadcrumb-item active">View Details</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">

                    <!-- /.card-header -->
                    <div class="card-body">
                        <form id="SaveAssetType" name="SaveAssetType" action="SaveAssetType" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-lg-6">

                                    <div class="card card-info">
                                        <div class="card-header @sams.Common.Helper.PrimaryColor">
                                            <h3 class="card-title">Asset Type</h3>
                                        </div>
                                        <div class="card-body">

                                            <div class="form-group">
                                                <input type="hidden" asp-for="AssetTypeId" class="form-control" />
                                                <label asp-for="AssetTypeName" class="control-label">Asset Type Name *</label>
                                                <input asp-for="AssetTypeName" class="form-control" />
                                                <div id="errAssetTypeName"></div>
                                            </div>


                                        </div>
                                        <!-- /.card-body -->
                                    </div>







                                </div>

                            </div>



                            <div class="row">
                                <div class="col-lg-12">
                                    @if (loggedInUser.RolePermission.RolePermissionList.FirstOrDefault(p => p.ModuleId == 11).CanEdit)
                                    {
                                        <div class="form-group">
                                            <input type="button" id="btnSave" value="SUBMIT" class="btn btn-primary" onclick="saveData();" />
                                        </div>
                                    }

                                </div>

                            </div>


                        </form>

                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
    </section>
</div>
