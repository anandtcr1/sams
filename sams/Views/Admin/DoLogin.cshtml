@model sams.Models.UserViewModel

@{
    ViewData["Title"] = "DoLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




    <script>
    function doLogin() {
        var userName = $("#UserName").val();
        var password = $("#Password").val();

        if (userName == '') {
            alert("Please enter User name");
        }
        else if (password == '') {
            alert("Please enter password");
        }
        else {

            $("#CheckUser").submit();
