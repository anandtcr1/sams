@model IEnumerable<sams.Models.ImageViewModel>

@{
    ViewData["Title"] = "UploadImage";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>UploadImage</h1>

<script>
    function saveData() {
        $("#frmImage").submit();
    }
</script>








<div class="content-wrapper">
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header @sams.Common.Helper.PrimaryColor">
                        <h3 class="card-title">Edit Property</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <form id="frmImage" name="frmImage" method="post"  enctype="multipart/form-data" >
                            <div class="row">
                                <div class="col-lg-6">

                                    <div class="form-group">
                                        <label for="ImageName" class="control-label">Upload Image</label>
                                        <input type="file" id="UploadedImage" name="UploadedImage" class="form-control" />
                                        <div id="errFirstName"></div>
                                        <input type="hidden" id="ImageId" name="ImageId" value="0" />
                                        <input type="hidden" id="PropertyId" name="PropertyId" value="0" />
                                        <input type="hidden" id="ImageName" name="ImageName" value="0" />
                                    </div>


                                    <div class="form-group">
                                        <input type="button" id="btnSave" value="SUBMIT" class="btn btn-primary" onclick="saveData();" />
                                    </div>

</form>

                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
    </section>
</div>























