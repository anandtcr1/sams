@model sams.Models.CustomerMessageViewModel

@{
    ViewData["Title"] = "ShowCustomerMessage";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    <script>
        function viewList() {
            var baseUrl = "@Url.Action("Index", "CustomerMessage")";
            location.href = baseUrl;
        }
    </script>
<div class="content-wrapper">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Customer Message</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="javascript:viewList();">View List</a></li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>


    <section class="content">
        <form id="frmSaveNetLeaseProperties" name="frmSaveNetLeaseProperties" action="SaveNetLeaseProperties" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-6">

                    <div class="card card-info">
                        <div class="card-header @sams.Common.Helper.PrimaryColor">

                            <div class="row">
                                <div class="col-12">
                                    <h3 class="card-title">Message</h3>
                                </div>

                            </div>

                        </div>
                        <div class="card-body">

                            <div class="form-group">
                                <label for="p_ListingExpiry" class="control-label">Name</label> : @Model.CustomerName
                            </div>

                            <div class="form-group">
                                <label for="p_ListingExpiry" class="control-label">Email</label> : @Model.CustomerEmail
                            </div>

                            <div class="form-group">
                                <label for="p_ListingExpiry" class="control-label">Subject</label> : @Model.EmailSubject
                            </div>

                            <div class="form-group">
                                <label for="p_ListingExpiry" class="control-label">Message</label> :
                                <textarea class="form-control" readonly>@Model.CustomerMessage</textarea>
                            </div>

                            <input type="button" id="btnList" value="View List" class="btn btn-success" onclick="viewList();" />
                        </div>
                        <!-- /.card-body -->

                        
                    </div>



                </div>


                


            </div>
        </form>

    </section>
</div>

