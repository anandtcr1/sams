@model IEnumerable<sams.Models.SamsLocationsViewModel>

@{
    ViewData["Title"] = "LocationToMap";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    <script>
        function getLatitudeAndLongitude() {
            //GetLatitudeAndLongitude
            var baseUrl = "@Url.Action("GetLatitudeAndLongitude", "SamsLocation")";
            location.href = baseUrl;
        }
    </script>
    <div class="content-wrapper">

        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>SH Asset List</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="javascript:goDashboard()">Home</a></li>
                            <li class="breadcrumb-item active">View Details</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Locate On Map</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example1" class="table table-sm text-sm">
                                <thead>
                                    <tr>
                                        <th>Latitude</th>
                                        <th>Longitude</th>
                                        <th>Address</th>
                                        <th>City</th>
                                        <th>State</th>
                                        <th>ZIP Code</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Latitude</td>
                                            <td>@item.Longitude</td>
                                            <td>@item.LocationAddress</td>
                                            <td>@item.City</td>
                                            <td>@item.State</td>
                                            <td>@item.Zipcode</td>



                                            <td>
                                                <button type="button" class="btn btn-success" onclick="addLocation(@item.LocationId)"><i class="fas fa-edit"></i></button>
                                                <button type="button" class="btn btn-danger" onclick="deleteLocation(@item.LocationId)"><i class="fas fa-minus-square"></i></button>
                                            </td>
                                        </tr>
                                    }



                                </tbody>

                            </table>

                            <div class="form-group">
                                
                                <button type="button" class="btn btn-success" onclick="getLatitudeAndLongitude()">Get Latitude And Longitude</button>
                            </div>

                        </div>
                        <!-- /.card-body -->



                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->

    </div>